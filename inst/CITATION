citHeader("To cite package 'MTurkR' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "MTurkR: Access to Amazon Mechanical Turk Requester API via R",
		  author = personList(as.person("Thomas J. Leeper")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Thomas J. Leeper (",
				year,
				"). MTurkR: Access to Amazon Mechanical Turk Requester API via R. ",
				vers, ".", sep=""))